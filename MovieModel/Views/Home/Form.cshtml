@model MusicApplication.Models.Movies
@using MovieModel.Models

<form method="post" class="container mt-5">
    <h2>Add a Record</h2>
    <input type="hidden" asp-for="MovieId" />

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category:</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title:</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year:</label>
        <input asp-for="Year" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director:</label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating:</label>
        <select asp-for="Rating" class="form-select">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited:</label>
        <select asp-for="Edited" class="form-select" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent to:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CopiedToPlex" class="form-label">Copied to Plex:</label>
        <input asp-for="CopiedToPlex" />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes:</label>
        <input asp-for="Notes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

